<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="main.macros['main']">
  <div metal:fill-slot="content">
    <div id="content">
      <div class="post">
        <h1 class="title">${title}</h1>
        <h3>portfolio at ${date.isoformat()}</h3>
        <table>
          <thead>
            <tr>
              <th>Asset name</th>
              <th>Amount</th>
              <th>Income/expenses</th>
            </tr>
          </thead>
          <tbody align="right">
            <tr tal:repeat="asset portfolio.assets">
              <td>
                <a href="${request.application_url}/asset/${asset.id}" title="${asset.identity}">${asset.name}</a>
              </td>
              <td>${asset.balance(date)}</td>
              <td>${asset.estimated_yearly_income_expenses(date)}</td>
            </tr>
          </tbody>
          <tfoot align="right">
            <tr>
              <td>Total</td>
              <td></td>
              <td>${portfolio.estimated_yearly_income_expenses(date)}</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</html>
