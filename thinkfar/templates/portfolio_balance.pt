<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="main.macros['main']">
  <div metal:fill-slot="content">
    <div id="content">
      <div class="post">
        <h1 class="title">${title}</h1>
        <h3>portfolio at ${date.isoformat()}</h3>
        <table>
          <thead>
            <tr>
              <th>Account</th>
              <th>Denomination</th>
              <th>Balance</th>
            </tr>
          </thead>
          <tbody align="right">
            <tal:totalaccount tal:repeat="total_account portfolio.total_accounts()">
            <tal:account tal:repeat="account total_account.children_accounts">
            <tr tal:condition="account.definition and account.balance(date)">
              <td align="left">${account.definition.name}</td>
              <td>${account.denomination.identity}</td>
              <td>${account.balance(date)}</td>
            </tr>
            </tal:account>
            <tr>
              <th align="left">${total_account.definition.name}</th>
              <th>${total_account.denomination.identity}</th>
              <th>${total_account.balance(date)}</th>
            </tr>
            </tal:totalaccount>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</html>
