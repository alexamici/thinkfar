<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="main.macros['main']">
  <div metal:fill-slot="content">
    <div id="content">
      <div class="post">
        <h1 class="title">${title}</h1>
        <h3>portfolio at ${date.isoformat()}</h3>
        <table>
          <thead>
            <tr>
              <th>Account</th>
              <th>Denomination</th>
              <th>Balance</th>
            </tr>
          </thead>
          <tbody align="right" tal:define="none portfolio.setup_skel()">
            <tr tal:repeat="account portfolio.accounts()">
              <td>${account.definition.name}</td>
              <td>${account.denomination.identity}</td>
              <td>${account.balance(date)}</td>
            </tr>
          </tbody>
          <tfoot align="right">
            <tr>
              <td>Total</td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</html>
