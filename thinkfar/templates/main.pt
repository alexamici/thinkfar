<metal:main
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    define-macro="main">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>${context.title}</title>
<link href="${request.application_url}/static/default.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div id="logo">
  <h2>${context.title}</h2>
</div>
<div id="header">
  <div id="menu">
    <ul>
      <li><a class="current_page_item" href="${request.application_url}">Home</a></li>
      <li><a href="${loggedin_url}">${loggedin_label}</a></li>
    </ul>
  </div>
</div>
<div id="wrapper">
  <div id="page">
    <div metal:define-slot="content"></div>
    <div style="clear: both;">&nbsp;</div>
  </div>
</div>
<div id="footer">
  <p id="legal">Copyright (c) 2010 Alessandro Amici. All Rights Reserved.</p>
</div>
</body>
</html>
</metal:main>
