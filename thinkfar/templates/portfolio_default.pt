<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="main.macros['main']">
  <div metal:fill-slot="content">
    <div id="content">
      <div class="post">
        <h1 class="title">${title}</h1>
        <form method="GET">
            <label for="date">date: </label><input type="text" name="date" id="date" value="${date.isoformat()}" />
            <script type="text/javascript">
            $(document).ready(function(){
                $('#date').datepicker({dateFormat: 'yy-mm-dd'});
            });
            </script>
            <input type="submit" value="Update" />
        </form>
        <h3>portfolio at ${date.isoformat()}</h3>
        <table>
          <thead>
            <tr>
              <th>Asset</th>
              <th>Inventory</th>
              <th>Total Value</th>
              <th>Yearly Revenue</th>
            </tr>
          </thead>
          <tbody align="right">
            <tal:asset tal:repeat="asset list(portfolio.assets)">
            <tr tal:condition="asset.inventory.balance(date)">
              <td align="left">
                <a href="${route_url('asset_default', request, asset_id=asset.id)}" title="${asset.identity}">${asset.name}</a>
              </td>
              <td>${asset.inventory.balance(date)}</td>
              <td>${asset.total_value(date)}</td>
              <td>${asset.estimated_yearly_revenue(date)}</td>
            </tr>
            </tal:asset>
          </tbody>
          <tfoot align="right">
            <tr>
              <td>Total</td>
              <td></td>
              <td>${portfolio.total_value(date)}</td>
              <td>${portfolio.estimated_yearly_revenue(date)}</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</html>
