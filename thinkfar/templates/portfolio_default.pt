<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="main.macros['main']">
  <div metal:fill-slot="content">
    <div id="content">
      <div class="post">
        <h1 class="title">${title}</h1>
        <h3>portfolio at ${date.isoformat()}</h3>
        <table>
          <thead>
            <tr>
              <th>Asset name</th>
              <th>Inventory</th>
              <th>Parent Account Balance</th>
              <th>Revenue/expenses</th>
            </tr>
          </thead>
          <tbody align="right">
            <tal:asset tal:repeat="asset list(portfolio.assets)">
            <tr tal:condition="asset.inventory.balance(date) or asset.parent_account.balance(date)">
              <td>
                <a href="${request.application_url}/asset/${asset.id}" title="${asset.identity}">${asset.name}</a>
              </td>
              <td>${asset.inventory.balance(date)}</td>
              <td>${asset.parent_account.balance(date)}</td>
              <td></td>
            </tr>
            </tal:asset>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</html>
