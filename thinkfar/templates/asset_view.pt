<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="main.macros['main']">
  <div metal:fill-slot="content">
    <div id="content">
      <div class="post">
        <h1 class="title">${title}</h1>
        <h3>asset at ${date.isoformat()}</h3>
        <table>
          <thead>
            <tr>
              <th>Trade date</th>
              <th>Amount</th>
              <th>Price</th>
              <th>Cost</th>
              <th>Balance</th>
            </tr>
          </thead>
          <tbody align="right">
            <tr tal:repeat="trade asset.trades">
              <td>
                <a href="${request.application_url}/trade/${trade.id}">${trade.date}</a>
              </td>
              <td>${trade.amount}</td>
              <td>${trade.price}</td>
              <td>${trade.cost}</td>
              <td>${asset.balance(trade.date)}</td>
            </tr>
          </tbody>
          <tfoot align="right">
            <tr>
              <td>Total</td>
              <td></td>
              <td>${asset.cumulative_sell(date)-asset.cumulative_buy(date)}</td>
              <td>${asset.cumulative_cost(date)}</td>
              <td>${asset.balance(date)}</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</html>
