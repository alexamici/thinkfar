<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="main.macros['main']">
  <div metal:fill-slot="content">
    <div id="content">
      <div class="post">
        <h1 class="title">${title}</h1>
        <h3>asset trade history as of ${date.isoformat()}</h3>
        <table>
          <thead>
            <tr>
              <th>Trade date</th>
              <th>Description</th>
              <th>Amount</th>
              <th>Seller Value</th>
              <th>Spread</th>
              <th>Parent Account Balance</th>
              <th>Inventory</th>
            </tr>
          </thead>
          <tbody align="right">
            <tal:entry tal:repeat="entry inventory_transaction_entries">
            <tr tal:condition="entry.transaction.date &lt;= date">
              <td>
                <a href="${request.application_url}/transaction/${entry.transaction.id}">${entry.transaction.date}</a>
              </td>
              <td>${entry.transaction.description or '-'}</td>
              <td>${entry.amount}</td>
              <td></td>
              <td></td>
              <td></td>
              <td>${asset.inventory.balance(entry.transaction.date)}</td>
            </tr>
            </tal:entry>
          </tbody>
          <tfoot align="right">
            <tr>
              <td>Total</td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td>${asset.inventory.balance(date)}</td>
            </tr>
          </tfoot>
        </table>
        <h3>asset parent account history as of ${date.isoformat()}</h3>
        <table>
          <thead>
            <tr>
              <th>Trade date</th>
              <th>Description</th>
              <th>Amount</th>
              <th>Seller Value</th>
              <th>Spread</th>
              <th>Parent Account Balance</th>
              <th>Inventory</th>
            </tr>
          </thead>
          <tbody align="right">
            <tal:entry tal:repeat="entry parent_account_transaction_entries">
            <tr tal:condition="entry.transaction.date &lt;= date">
              <td>
                <a href="${request.application_url}/transaction/${entry.transaction.id}">${entry.transaction.date}</a>
              </td>
              <td>${entry.transaction.description or ''}</td>
              <td>${entry.amount}</td>
              <td></td>
              <td></td>
              <td>${asset.parent_account.balance(entry.transaction.date)}</td>
              <td>${asset.inventory.balance(entry.transaction.date)}</td>
            </tr>
            </tal:entry>
          </tbody>
          <tfoot align="right">
            <tr>
              <td>Total</td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td>${asset.parent_account.balance(date)}</td>
              <td>${asset.inventory.balance(date)}</td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</html>
