<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="main.macros['main']">
  <div metal:fill-slot="content">
    <div id="content">
      <div class="post">
        <h1 class="title">${title}</h1>
        <h3>asset at ${date.isoformat()}</h3>
        <table>
          <tr>
            <td>${asset.name}</td>
            <td>${asset.balance(date)}</td>
            <td>${asset.cumulative_buy(date)}</td>
            <td>${asset.cumulative_sell(date)}</td>
            <td>${asset.cumulative_sell(date)-asset.cumulative_buy(date)}</td>
          </tr>
          <tr tal:repeat="trade asset.trades">
            <td>
              <a href="${request.application_url}/trades/${trade.id}">${trade.date}</a>
            </td>
            <td>${trade.ammount}</td>
            <td>${trade.price}</td>
            <td>${trade.cost}</td>
         </tr>
        </table>
      </div>
    </div>
  </div>
</html>
