<configure xmlns="http://namespaces.repoze.org/bfg">

  <include package="repoze.bfg.includes" />

  <view
     context=".models.Root"
     view=".views.home"
     renderer="templates/home.pt"
     />

  <static
     name="static"
     path="templates/static"
     />

  <route
     name="portfolio"
     path="/portfolio/:id"
     view=".views.portfolio"
     view_renderer="templates/portfolio.pt"
     />

</configure>
